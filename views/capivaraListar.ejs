<link
  href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
  rel="stylesheet"
/>
<!-- <link href="/stylesheets/chat.css" rel="stylesheet" /> -->

<% if(mensagemSucesso) { %>
<p class="font-semibold text-center text-green-600 bg-green-200 p-2 rounded">
  <%= mensagemSucesso %>
</p>
<% } %>

<div class="grid-cols-1 sm:grid md:grid-cols-4">
  <% for (let i = 0; i < capivaras.length; i++) { %>
  <div
    class="mx-3 mt-6 flex flex-col rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700 sm:shrink-0 sm:grow sm:basis-0"
  >
    <% if(capivaras[i].imagem){%>
    <img
      class="rounded-t-lg"
      src="/imagens/capivara/<%= capivaras[i].imagem %>"
      alt="Capivara"
    />
    <% }else{%>
    <img
      class="rounded-t-lg"
      src="/imagens/capivaraDefault.png"
      alt="Capivara"
    />
    <%}%>
    <div class="p-6">
      <h5
        class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
      >
        <%= capivaras[i].nome %>
      </h5>
      <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200">
        <span>Idade: <%= capivaras[i].idade %></span><br />
        <span>Descrição: <%= capivaras[i].descricao %></span>
      </p>
    </div>
    <div
      class="mt-auto border-t-2 border-neutral-100 px-6 py-3 text-center dark:border-neutral-600 dark:text-neutral-50"
    >
      <span
        >Responsável: <% if (capivaras[i].usuarioId !== null) { %> <%=
        capivaras[i]['usuario.nome'] %> <% } else { %> Nenhum <% } %>
      </span>
    </div>
    <div
      class="mt-auto border-t-2 border-neutral-100 px-6 py-3 text-center dark:border-neutral-600 dark:text-neutral-50"
    >
      <form method="POST" action="/chat">
        <input
          type="hidden"
          name="idUser"
          value="<%=capivaras[i].usuarioId%>"
        />
        <input type="hidden" name="idCapivara" value="<%=capivaras[i].id%>" />
        <button type="submit">
          <span class="material-icons"> chat </span>
        </button>
      </form>
    </div>
    <% if(capivaras[i].usuarioId == locals.id || !capivaras[i].usuarioId){ %>
    <div
      class="mt-auto border-t-2 border-neutral-100 px-6 py-3 text-center dark:border-neutral-600 dark:text-neutral-50"
    >
      <div class="mt-2 space-x-2">
        <button
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded"
          href="/capivara/editar/<%= capivaras[i].id %>"
        >
          Editar
        </button>

        <button
          class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded"
        >
          <a href="/capivara/deletar/<%= capivaras[i].id %>">Deletar</a>
        </button>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>
</div>
